<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.nelson.mot.main">

    <application
        android:name=".MotApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".presentations.splash.SplashActivity"
            android:theme="@style/SplashThemeLight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentations.home.HomeActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".presentations.payment.PaymentActivity" />
        <activity android:name=".presentations.category_details.CategoryDetailsActivity" />
        <activity android:name=".presentations.about.AboutActivity" />
        <activity android:name=".presentations.payment_list.compose.PaymentListComposeActivity" />
    </application>

</manifest>

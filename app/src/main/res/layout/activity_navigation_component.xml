<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="dev.nelson.mot.main.presentations.navigationcomponent.NavigationComponentVeiwModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/navigation_component" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            style="@style/MotBottomAppBarTheme"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:elevation="6dp"
            app:fabAlignmentMode="end"
            app:hideOnScroll="true" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_filter_list_black_24dp"
            app:layout_anchor="@+id/bottom_app_bar"
            app:layout_behavior="dev.nelson.mot.main.util.recycler.fab.ScrollAwareFABBehavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>

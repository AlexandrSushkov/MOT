<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/item_horizontal_padding"
    android:paddingBottom="@dimen/item_horizontal_padding"
    android:orientation="vertical">

    <!--header wrapper-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@id/item_payment_text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLines="1"
            android:textSize="@dimen/payment_title_text_size" />

        <TextView
            android:id="@+id/item_payment_text_category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="end"
            android:lines="1"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/item_payment_text_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="2.8"
            android:gravity="end"
            android:textColor="@color/colorRed"
            />

        <ImageView
            android:id="@+id/item_payment_image_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/item_payment_settings_description"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:tint="@color/colorGray" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_payment_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/payment_date_text_size" />

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/item_payment_text_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"

        android:visibility="gone" />

</LinearLayout>


